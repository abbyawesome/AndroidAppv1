<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MagicActivity">

    <TextView
        android:layout_width="202dp"
        android:layout_height="192dp"
        app:layout_constraintTop_toTopOf="@id/magic8BallIv"
        app:layout_constraintBottom_toBottomOf="@id/magic8BallIv"
        app:layout_constraintStart_toStartOf="@id/magic8BallIv"
        app:layout_constraintEnd_toEndOf="@id/magic8BallIv"
        android:background="#231b47"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="413dp" />

    <ImageView
        android:id="@+id/magicTriangleIv"
        android:layout_width="191dp"
        android:layout_height="248dp"
        android:alpha=".4"
        android:rotationX="180"
        app:layout_constraintBottom_toBottomOf="@+id/magic8BallIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magic8BallIv"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@mipmap/triangle_foreground" />

    <ImageView
        android:id="@+id/magic8BallIv"
        android:layout_width="353dp"
        android:layout_height="371dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@mipmap/magic8ball_foreground" />

    <TextView
        android:id="@+id/magic8BallTv"
        android:layout_width="123dp"
        android:layout_height="103dp"
        android:fontFamily="@font/alegreya_sans_sc"
        android:gravity="center"
        android:text="@string/magic8BallDefault"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/magic8BallIv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/magic8BallIv" />

    <TextView
        android:id="@+id/magicUserTv"
        android:layout_width="237dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="@string/magicUserDefault"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/purple_700"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>